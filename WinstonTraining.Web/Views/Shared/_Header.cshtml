
<div class="container">
    <div class="row mt-3 mb-3">

        <!-- rs: vue.js instance for the customer header-->
        <div class="col">
            <div class="vue-CustomerHeader">
                <div v-if="IsLoggedIn">
                    <span class="pr-2">Hello {{FirstName}} {{LastName}}</span>
                    <a href="/util/logout.aspx">Logout</a>
                </div>
                <div v-else>
                    <span class="pr-2">Hello New Friend!</span>
                    <a href="/util/login.aspx">Login</a>
                </div>
            </div>
        </div>

        <!-- rs: vue.js instance for the cart header-->
        <div class="col-auto align-self-end">
            <div class="vue-CartHeader">
                <a href="/cart" class="btn btn-primary">
                    <span class="oi oi-cart mr-2"></span>
                    <span class="mr-2">${{Total}}</span>
                    <span class="badge badge-light">{{TotalItems}} Item(s)</span>
                </a>
            </div>
        </div>

    </div>
</div>